{
    "name": "protonlabs/x509-sign",
    "description": "Sign ASN1 strings",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "serve":  [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8042"
        ],
        "test": "phpunit --verbose",
        "coverage": "phpunit --coverage-text --coverage-html=coverage --coverage-clover=coverage.xml"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "phpseclib/phpseclib": "^3.0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
